//use stylus
.container {
  width 1200px
  margin 0 auto
  .header {
    display flex
    min-width 1200px
  //height 200px
    .logo {
      flex 1
      img {
        display inline-block
      }
      h2 {
        display inline-block
      }
    }
    .nav {
      flex 1
      height inherit
      .nav-list {
        text-align center
        font-size 0
        .nav-item {
          font-size 1rem
          display inline-block
          height 87px
          line-height 87px
          width calc(100% / 6)
        //float left
        }
      }
    }
  }
  .content {
  //background: #0099ff
    display block
    .banner {
      margin 0 auto
      .boxID {
        .pic {
          width: inherit;
          height: 340px;
        }
      }
    }
    .serve {
      width 100%
      margin-top 1em
      .serve-list {
        display flex
        .serve-item {
          flex 1
          text-align center
        }
      }
    }
    .hot-serve-bar {
      margin-top 1em
      strong {
        font-size 1.1em
        display inline-block
        font-weight 700
      }
      .hot-item {
        display: inline-block;
        border: 1px solid #dfe2e8;
        border-radius: 32px;
        height: 32px;
        line-height: 32px;
        padding-left: 10px;
        padding-right: 10px;
        margin-left: 12px;
        position: relative;
        color: #525a66;
        cursor pointer
        &:hover {
          border: 1px solid rgb(255, 0, 0);
        }

      }
    }
  }
}


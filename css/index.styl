//use stylus
.header {
  display flex
  min-width 1200px
  //height 200px
  .logo {

    flex 1
    img {
      display inline-block

    }
  }
  .nav {
    flex 1
    align-items center
    height inherit
    .nav-list {
      text-align center
      font-size 0
      font-weight bold
      .nav-item {
        color white
        font-size 1rem
        display inline-block
        height 87px
        line-height 87px
        width calc(100% / 6)
        //float left
      }
      .nav-item:hover {
        background-color #333333
        }
    }

  }
}

.container {
  width 1200px
  margin 0 auto
  .content {
  //background: #0099ff
    display block
    .banner {
      margin 0 auto
      .boxID {
        .pic {
          width: 60%;
          height: 340px;
        }
      }
    }
    .serve {
      width 100%
      margin-top 1em
      .serve-list {
        display flex
        .serve-item {
          flex 1
          text-align center
        }
      }
    }
    .hot-serve-bar {
      margin-top 1em
      strong {
        font-size 1.1em
        display inline-block
        font-weight 700
      }
      .hot-item {
        display: inline-block;
        border: 1px solid #dfe2e8;
        border-radius: 32px;
        height: 32px;
        line-height: 32px;
        padding-left: 10px;
        padding-right: 10px;
        margin-left: 12px;
        position: relative;
        color: #525a66;
        cursor pointer
        &:hover {
          border: 1px solid rgb(255, 0, 0);
        }

      }
    }
  }
}

.large-container {
  width 100%
  background #f5f5f5
  .large-content {
    width 1200px
    margin 0 auto
    .serve-show {
      // this is the show common style
      img {
        width 374px
        height 200px
      }
      li {
        margin 10px
        margin-right 5px
        display inline-block
        font-size 1rem
        text-align center
        .text-wrapper{
          width 374px
          height 80px
          background white
          span {
            line-height 80px
          }
        }
        }

      margin-top 1em
      padding-top 2em
      background rgb(245, 245, 245)
      .title {
        font-size 1.5em
        strong {
          color rgba(255, 0, 0, 0.8)
          padding-right 1em
        }
      }
      .clean {

        .clean-list {
          font-size 0
          text-align center
          .clean-item {

          }
        }
      }

  }
}}

.footer {
  width: 100%
  height: 100px
  background-color: #999999
  margin-top: 30px
  .about-list {
    height 36px
    color white
    width 410px
    margin 0 auto
    .about-item {
      float left
      padding 10px 10px
      a {
        text-decoration: none;
        color: white;
      }
      a:hover {
        color: white;
      }
    }
  }
  .msg {
    width: 310px;
    margin: 0 auto;
    height: 50px;
    padding: 5px 0
    .about-botton {
      padding: 5px 0;
      text-align: center;
      color: #525a66;
    }
  }
}

.icon {
  width 100%
  height 350px
  padding 0 200px
  .icon-list {
    float left
    margin 100px
    img {
      width 100px
    }
    .icon-p {
      width 100px
      text-align center
      font-size 20px
      padding: 15px 0
    }
  }
}